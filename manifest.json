{
  "manifest_version": 3,
  "name": "Privacy Lens - AI Privacy Analyzer",
  "version": "2.0.0",
  "description": "Professional privacy protection tool that analyzes cookies and terms & conditions with AI-powered insights. Reveals hidden privacy risks with clear, actionable reports.",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "cookies",
    "storage", 
    "activeTab",
    "tabs",
    "scripting",
    "notifications",
    "contextMenus",
    "alarms",
    "webNavigation"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "http://localhost:*/*",
    "https://localhost:*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Privacy Lens - Analyze Privacy",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "cookie_prediction_map.json",
        "icons/*",
        "popup/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "options_page": "popup/options.html"
}



