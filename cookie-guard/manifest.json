{
  "manifest_version": 3,
  "name": "Cookie Guard",
  "version": "2.0",
  "description": "Enhanced cookie control and privacy protection with beautiful visualizations",
  "permissions": [
    "cookies", 
    "storage", 
    "activeTab",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background-enhanced.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-enhanced.js", "readability.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["cookie_prediction_map.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "popup/options.html"
}



